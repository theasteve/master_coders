<div class="form-section">
  <div class="form-wrapper">
    <h2>Registration Form</h2>
    <%= render 'errors' %>
    <%= form_for @user do |f| %>
    <p>
      <%= f.label :username  %> </br>
      <%= f.text_field :username, class: 'form-textfield' %>
    </p>
    <p>
      <%= f.label :password, "Password" %></br>
      <%= f.password_field :password, class: 'form-textfield' %>
    </p>
    <p>
      <%= f.label :role %> </br>
      <%= select_tag(:role, options_for_select([['Faculty'], ['Staff']])) %>
    </p>
    <p>
      <%= f.submit "Register!", class: 'submit-button'%>
    </p>
    <% end %>
  </div>
</div>